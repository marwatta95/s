<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.marwa.applicationy.ChooseDjActivity"
    tools:showIn="@layout/activity_choose_dj">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints">


        <ImageButton
            android:id="@+id/hall"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/dj" />

        <TextView
            android:id="@+id/textViewUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="The DJs available by this date .\nJust click to reserve!"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#F5B041"
         />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <ListView
                android:id="@+id/list1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:headerDividersEnabled="false"
                android:footerDividersEnabled="true"
                android:background="@android:color/white"
                android:divider="@drawable/list_divider"
                android:listSelector="@drawable/list_selector"
                android:dividerHeight="10dip"
                ></ListView>
        </ScrollView>


        <Button
            android:id="@+id/next"
            android:layout_width="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="40dp"
            android:background="@drawable/nextbutton"
            android:textColor="@android:color/white"

            android:text="NEXT" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
