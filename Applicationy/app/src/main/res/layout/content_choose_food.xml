<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.marwa.applicationy.ChooseFoodActivity"
    tools:showIn="@layout/activity_choose_food">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/hall"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/food" />

        <TextView
            android:id="@+id/textViewUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="one Appetizer dish per guest"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#F5B041"
             />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fillViewport="true">

            <ListView
                android:id="@+id/list1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:headerDividersEnabled="false"
                android:footerDividersEnabled="true"
                android:background="@android:color/white"
                android:divider="@drawable/list_divider"
                android:listSelector="@drawable/list_selector"
                android:dividerHeight="10dip"
                ></ListView>
        </ScrollView>

        <TextView
            android:id="@+id/textViewUserEmail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="one Main course dish per guest"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#F5B041"
        />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fillViewport="true">

            <ListView
                android:id="@+id/list2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:headerDividersEnabled="false"
                android:footerDividersEnabled="true"
                android:background="@android:color/white"
                android:divider="@drawable/list_divider"
                android:listSelector="@drawable/list_selector"
                android:dividerHeight="10dip"
                ></ListView>
        </ScrollView>

        <TextView
            android:id="@+id/textViewUserEmail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="one Dessert dish per guest"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#F5B041"
     />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fillViewport="true">
            <ListView
                android:id="@+id/list3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:headerDividersEnabled="false"
                android:footerDividersEnabled="true"
                android:background="@android:color/white"
                android:divider="@drawable/list_divider"
                android:listSelector="@drawable/list_selector"
                android:dividerHeight="10dip"
                ></ListView>
        </ScrollView>

        <TextView
            android:id="@+id/textViewUserEmail3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Cake"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#F5B041"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fillViewport="true">
            <ListView
                android:id="@+id/list4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:headerDividersEnabled="false"
                android:footerDividersEnabled="true"
                android:background="@android:color/white"
                android:divider="@drawable/list_divider"
                android:listSelector="@drawable/list_selector"
                android:dividerHeight="10dip"
                ></ListView>
        </ScrollView>



    </LinearLayout>
    </ScrollView>

        <Button
            android:id="@+id/next"
            android:layout_width="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="40dp"
            android:background="@drawable/nextbutton"
            android:textColor="@android:color/white"

            android:text="NEXT" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
